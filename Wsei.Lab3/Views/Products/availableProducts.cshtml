@model IEnumerable<Wsei.Lab3.Entities.ProductEntity>

    <h2>List of products</h2>


    <tbody>

        @foreach (var item in Model)
        {
            var i = 0;
            string[] nameArray = new string[1000];
            nameArray[i] = item.Name;
        <tr>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <h6 class="card-subtitle mb-2 text-muted">@nameArray[i]</h6>
                    <p class="card-text">@item.Description</p>
                    <a class="card-link" asp-area="" asp-controller="Products" asp-action="description" asp-route-id="@item.Id">Description</a>
                    @using (Html.BeginForm("AddToShoppingCart", "Products", FormMethod.Post))
                    {
                        <input hidden name="quantity" id="quantity" value="1" />
                        <input hidden name="productid" id="productid" value="@item.Id" />
                        <button type="button" class="form"/>

                    }
                </div>
            </div>
        </tr>
        i++;
        }



    </tbody>

@section Scripts{ 

<script>
    (function () {
        $(".form").click((e) => {
            var target = $(e.currentTarget);
            var quantity = target.siblings()[0].value;
            var productid = target.siblings()[1].value;

            $.ajax({
                type: "POST",
                contentType: "application/json",
                url: "AddToShoppingCart",
                data: JSON.stringify({ quantity: quantity, productid: productid }),
                complete: function (data) {
                    console.log(data)
                }
            });
        })
    })()
 

    
    

</script>
}
 





